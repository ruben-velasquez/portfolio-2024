---
/*
    Part of the component taken from:
    https://github.com/midudev/la-velada-web-oficial/blob/main/src/components/SEO.astro
*/

interface Props {
    title: string,
    description: string,
    canonical: string,
}

const { title, description, canonical } = Astro.props;
---
<title>{title}</title>

<meta charset="UTF-8" />
<meta name="theme-color" content="#020617" />
<meta name="description" content={description} />

<meta name="keywords" content="portfolio, gamedev, frontend, backend, ruben" />

<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
<link rel="icon" type="image/x-icon" href="/favicon.ico" />

<link rel="canonical" href={canonical}>

<meta name="viewport" content="width=device-width" />

<meta name="theme-color" content="#d5ff00" />

<meta name=”robots” content="index, follow">
<meta name="googlebot" content="index, follow" />